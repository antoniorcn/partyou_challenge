<odoo>
  <data>
    <record id="view_partyou_challenge_form" model="ir.ui.view">
        <field name="name">view.partyou.challenge.form</field>
        <field name="model">partyou.challenge.product</field>
        <field name="arch" type="xml">
            <form name="Partyou Challenge Product">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only">
                            <h1>
                                <field name="nome" placeholder="Product Name"/>
                            </h1>
                        </label>
                    </div>
                    <group>
                        <group>
                            <field name="validade"></field>
                        </group>
                        <group>
                            <field name="preco"></field>
                            <field name="peso"></field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_partyou_challenge_tree" model="ir.ui.view">
        <field name="name">view.partyou.challenge.tree</field>
        <field name="model">partyou.challenge.product</field>
        <field name="arch" type="xml">
            <tree string="Product Tree">
                <field name="nome"/>
                <field name="validade"/>
                <field name="preco"/>
                <field name="peso"/>
            </tree>
        </field>
    </record>

    <record id="product_list_action" model="ir.actions.act_window">
        <field name="name">Partyou Challenge Product</field>
        <field name="res_model">partyou.challenge.product</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree, form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Ajuda do sistema de cadastro de produtos do Partyou Challenge
            </p>
            <p>
                Mais detalhes sobre a ajuda no cadastro de produtos do Partyou Challenge
                Clique para adicionar um novo produto
            </p>
        </field>
    </record>

